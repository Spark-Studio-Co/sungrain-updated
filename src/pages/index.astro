---
import Layout from "../layouts/main-layout.astro";
import { Header } from "../features/navigation/ui/header";
import { defaultLang } from "../i18n/ui";

//sections
import HeroSection from "../features/hero/ui/hero-section.astro";
import AboutSection from "../features/about/ui/about-section.astro";
import PrinciplesSection from "../features/principles/ui/principles-section.astro";
import ServicesSection from "../features/services/ui/services-section.astro";
import ContactSection from "../features/contact/ui/contact-section.astro";
import { Menu } from "../features/navigation/ui/menu";

// Redirect to the default language path
export const prerender = true;
Astro.response.status = 301;
Astro.response.headers.set("Location", `/${defaultLang}`);
---

<Layout>
	<Header client:load />
	<Menu client:load />
	<HeroSection />
	<AboutSection />
	<PrinciplesSection />
	<ServicesSection />
	<ContactSection />
</Layout>
