---
interface Props {
    text: string;
    orangeText: string;
    level?: 1 | 2 | 3 | 4 | 5 | 6;
    className?: string;
}

const { text, orangeText, level = 1, className = "" } = Astro.props;
---

<h1
    is={`h${level}`}
    class={`font-unisans text-secondary font-[900] text-[40px] leading-[48px] ${className}`}
>
    {text.toUpperCase()}
    <span class="text-primary">{orangeText.toUpperCase()}</span>
</h1>
