---
interface BaseProps {
    label: string;
    className?: string;
    variant?: "default" | "outline";
}

interface DefaultButtonProps extends BaseProps {
    buttonType?: "default";
    [key: string]: any;
}

interface LinkButtonProps extends BaseProps {
    buttonType: "link";
    href: string;
    [key: string]: any;
}

type Props = DefaultButtonProps | LinkButtonProps;

const {
    buttonType = "default",
    label,
    className = "",
    variant = "default",
    href,
    ...rest
} = Astro.props;

const baseClassName =
    variant === "outline"
        ? `${className} rounded-[32px] h-[50px] w-[200px] flex items-center justify-center border border-primary text-primary font-montserrat font-[500] text-[16px]`
        : `${className} rounded-[32px] bg-primary h-[50px] w-[200px] flex items-center justify-center text-white font-montserrat font-[500] text-[16px]`;
---

{
    buttonType === "link" ? (
        <a href={href} class={baseClassName} {...rest}>
            {label}
        </a>
    ) : (
        <button class={baseClassName} {...rest}>
            {label}
        </button>
    )
}
