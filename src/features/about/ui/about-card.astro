---
import Button from "../../../shared/ui/button/button.astro";
import Image from "astro/components/Image.astro";
import type { ImageMetadata } from "astro";

interface Props {
    image: ImageMetadata;
    title: string;
    text: string;
}

const { image, title, text } = Astro.props;
---

<div
    class="flex flex-col items-start w-full h-[476px] sm:h-[576px] rounded-[20px]"
    style={{ boxShadow: "0px 4px 20px 0px #0000000D" }}
>
    <Image
        src={image}
        alt={title}
        class="w-full h-[200px] sm:h-[300px] object-cover rounded-t-[20px]"
    />
    <div class="flex flex-col items-start mt-8 px-4">
        <span class="font-unisans font-[900] text-[28px] text-primary"
            >{`${title}`}</span
        >
        <p
            class="mt-4 font-gotham font-[400] text-[14px] leading-[20px] text-secondary"
        >
            {text}
        </p>
        <Button label="Подробнее" className="mt-4" variant="outline" />
    </div>
</div>
