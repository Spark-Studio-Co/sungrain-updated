---
import Subtitle from "../../../shared/ui/subtitle/subtitle.astro";
import Heading from "../../../shared/ui/heading/heading.astro";
import Paragraph from "../../../shared/ui/paragraph/paragraph.astro";
import ListItem from "./list-item.astro";
import Image from "astro/components/Image.astro";

import { listContent } from "../model/list-content";

import principles01 from "../../../../public/images/principles01.webp";
---

<section class="flex items-end flex-col mt-16" id="principles">
    <Subtitle text="10 лет опыта на Рынке" className="text-[#D25127]" />
    <Heading
        text="Честность и качество в каждом зерне!"
        level={3}
        className="mt-3 text-end"
    />
    <Paragraph
        className="mt-8 mb-4 text-end"
        text="Честность – наш принцип. С SunGrain вы получаете качественное зерно и прозрачные условия. Мы строим бизнес на доверии, чтобы вы выбирали лучшее. SunGrain – по-настоящему честный бизнес."
    />
    <div class="flex flex-col gap-4">
        {listContent.map(({ text }) => <ListItem text={text} />)}
    </div>
    <div class="w-full relative h-[170px] mt-8">
        <Image
            src={principles01}
            alt="Wheat"
            class="object-contain scale-x-[-1] absolute -left-10 sm:-left-20 max-w-[360px] max-h-[196px]"
            width={360}
            height={196}
        />
    </div>
</section>
